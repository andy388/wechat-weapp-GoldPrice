/**index.wxss**/

.userinfo {
    display: flex;
    align-items: center;
    background: #fff;
    padding: 5px;
}

.userinfo-avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    vertical-align: middle;
    margin-left: 20rpx;
}

.userinfo-nickname {
    margin-left: 40rpx;
    color: #333;
    font-size: 16px;
}

.usermotto {
    margin-top: 200px;
}

.box {
    margin-top: 20rpx;
}

.list {
    margin-bottom: 15px;
    font-size: 14px;
    color: #333;
    background: #fff;
    padding:15px 10px;
}
.sub-title {
    font-size: 16px;
    color: #1a8cff;
    text-align: center;
    padding: 5px;
    border-bottom: 1px solid #1a8cff;
}
input {
    border: 1px solid #eee;
    padding: 1px 5px;
    width: 180px;
    margin-left: 10px;
}
label {
    display: flex;
    align-items: center;
    margin-top: 16px;
    font-size: 16px;
}
.submit{
    width: 100px;
    height: 32px;
    line-height: 32px;
    background: #1a8cff;
    color: #fff;
    text-align: center;
    font-size: 15px;
    margin-top:10px; 
}
.about-us>view{
    margin: 10px 0;
    font-size: 15px;
    padding: 3px;
}
.copy{
    font-size:12px;
    color:#666;
    border: 1px solid #ccc;
    border-radius: 2px;
    background: #f6f6f6;
    margin-left: 8px;
    text-align: center;
    padding:1px 5px;
}
.online-server{
    background: #fff;
    border: none;
    font-size: 15px;
    margin-top: 25px;
}
.appid-list{
    line-height: 40px;
    color:#025098;
    font-size: 15px;
    font-weight: bold;
}